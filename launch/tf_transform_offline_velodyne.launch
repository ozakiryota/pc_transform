<launch>
	<!-- tf -->
	<node pkg="tf" type="static_transform_publisher" name="velodyne_to_camera" args="0.111393 -0.0103084 -0.0137764 0.0 0.0 0.0 velodyne camera_link 100"/>
    <node pkg="tf" type="static_transform_publisher" name="camera_to_color" args="0 0.015 0 0.001 -0.001 -0.017 camera_link camera_color_frame 100"/>
    <node pkg="tf" type="static_transform_publisher" name="color_to_optical" args="0 0 0 -1.5707963265 0 -1.5707963265 camera_color_frame camera_color_optical_frame 100"/>

	<!-- main -->
	<node pkg="pc_transform" type="tf_transform_offline" name="tf_transform_offline" output="screen">
		<param name="load_rosbag_path" type="string" value="$(env HOME)/rosbag/sq2_velodyne/dkan_outdoor/2018-10-31-08-37-11_converted.bag"/>
		<param name="target_frame" type="string" value="camera_color_optical_frame"/>
		<param name="topic_0" type="string" value="/velodyne_points"/>
	</node>

	<!-- rviz -->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find pc_transform)/rviz_config/pc_tf_transform_velodyne.rviz"/>
</launch>
